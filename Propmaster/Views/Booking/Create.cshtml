@model Propmaster.Models.Booking

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Booking</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <input type="hidden" asp-for="ClientId" class="form-control" />
                @Html.DisplayFor(modelItem => modelItem.ClientId)
            </div>
            <div class="form-group">
                <label asp-for="ReservedDate" class="control-label"></label>
                <input asp-for="ReservedDate" class="form-control" />
                <span asp-validation-for="ReservedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyId" class="control-label"></label>
                <input type="hidden" asp-for="PropertyId" class="form-control" />
                @Html.DisplayFor(modelItem => modelItem.PropertyId)
            </div>
            @*<input type="hidden" asp-for="AgentId" class="form-control" />*@
            <input type="hidden" asp-for="Status" class="form-control" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input type="hidden" asp-for="Type" class="form-control" />
                @Html.DisplayFor(modelItem => modelItem.Type)
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                <textarea asp-for="Remarks" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
