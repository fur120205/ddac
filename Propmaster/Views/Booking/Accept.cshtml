@model Propmaster.Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Accept booking</h1>

<h3>Are you sure you want to accept this booking?</h3>
<div>
    <h4>Booking details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PropertyId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PropertyId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Remarks)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Remarks)
        </dd>
    </dl>

    <form asp-action="Accept">
        <input type="hidden" asp-for="BookingId" />
        <input type="submit" value="Accept" class="btn btn-primary" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
